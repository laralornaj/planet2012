<!DOCTYPE html> 
<html> 
<head> 
  <title>Planet</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">
    $(function() {
      $( "#trip_description" ).cleditor();
    });
  </script>

</head>
<body id="planet"> 
  <div id="banner"> 
    <%= image_tag("logo3.png") %>
    <%= @page_title || "Planet Travel Site" %>
    <div class="user">
       <% if current_user %>
         <%= link_to current_user.name,
             edit_user_registration_path %> |
         <%= link_to "Sign out", destroy_user_session_path %>
       <% else %>
         <%= link_to "Sign in", new_user_session_path %>
       <% end %>
    </div>

  </div> 
  <div id="footer">
      <%= link_to "Home", planet_index_path %>
      <%= link_to "Contact", planet_contact_path %>
      <%= link_to "Ejemplo", planet_ejemplo_path %>
      <%= link_to "Authors", planet_author_path %>
      <%= link_to "Tipos",  types_path %> 
      <%= link_to "Ordered Types",  types_ordered_index_path %> 	
      <%= link_to "Sitios", sites_path %> 
      <%= link_to "Contact", planet_contact_path %>
      <%= link_to "Sign up", new_user_registration_path %>
  </div>
  <div id="columns"> 
   
    <div id="main"> 
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>     
    </div> 
  </div> 
  <div id="footer">
      <%= link_to "Home", planet_index_path %>
      <%= link_to "Contact", planet_contact_path %>
      <%= link_to "Ejemplo", planet_ejemplo_path %>
      <%= link_to "Authors", planet_author_path %>
      <%= link_to "Tipos",  types_path %> 
      <%= link_to "Ordered Types",  types_ordered_index_path %> 	
      <%= link_to "Sitios", sites_path %>   
      <%= link_to "Contact", planet_contact_path %>
      <%= link_to "Sign up", new_user_registration_path %>
  </div>			
</body> 
</html> 
